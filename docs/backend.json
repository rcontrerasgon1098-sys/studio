
{
  "entities": {
    "WorkOrder": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "WorkOrder",
      "type": "object",
      "description": "Represents a work order in the Teleconnect Workflow application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the WorkOrder entity."
        },
        "folio": {
          "type": "number",
          "description": "Autogenerated folio number for the work order."
        },
        "clientName": {
          "type": "string",
          "description": "Name of the client."
        },
        "clientContact": {
          "type": "string",
          "description": "Legacy combined contact info."
        },
        "clientPhone": {
          "type": "string",
          "description": "Phone number of the client."
        },
        "clientEmail": {
          "type": "string",
          "description": "Email of the client."
        },
        "createdBy": {
          "type": "string",
          "description": "UID of the supervisor who created the work order."
        },
        "creatorEmail": {
          "type": "string",
          "description": "Email of the creator.",
          "format": "email"
        },
        "startDate": {
          "type": "string",
          "description": "Start timestamp.",
          "format": "date-time"
        },
        "status": {
          "type": "string",
          "description": "Status (Completed/Pending)."
        },
        "team": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of team members assigned to the work order."
        },
        "clientId": { "type": "string" },
        "signalType": { "type": "string" },
        "signalCount": { "type": "number" },
        "isCert": { "type": "boolean" },
        "certifiedPointsCount": { "type": "number" },
        "isPlan": { "type": "boolean" },
        "isLabeled": { "type": "boolean" },
        "labelDetails": { "type": "string" },
        "isCanalized": { "type": "boolean" },
        "connectionSwitch": { "type": "boolean" },
        "hubConnection": { "type": "boolean" },
        "address": { "type": "string" },
        "building": { "type": "string" },
        "floor": { "type": "string" },
        "cdsCanalization": { "type": "string" },
        "description": { "type": "string" },
        "techName": { "type": "string" },
        "techRut": { "type": "string" },
        "techSignatureUrl": { "type": "string", "format": "uri" },
        "clientReceiverName": { "type": "string" },
        "clientReceiverRut": { "type": "string" },
        "clientSignatureUrl": { "type": "string", "format": "uri" },
        "sketchImageUrl": { "type": "string", "format": "uri" }
      },
      "required": [
        "id",
        "folio",
        "clientName",
        "createdBy",
        "status"
      ]
    },
    "Client": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Client",
      "type": "object",
      "description": "Represents a client in the system.",
      "properties": {
        "id": { "type": "string" },
        "razonSocial": { "type": "string" },
        "nombreCliente": { "type": "string" },
        "rutCliente": { "type": "string" },
        "direccionCliente": { "type": "string" },
        "comunaCliente": { "type": "string" },
        "telefonoCliente": { "type": "string" },
        "emailClientes": { "type": "string" },
        "estadoCliente": { "type": "string", "enum": ["Activo", "Inactivo"] }
      },
      "required": ["nombreCliente", "rutCliente", "estadoCliente"]
    },
    "Personnel": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Personnel",
      "type": "object",
      "description": "Represents company personnel. The document ID must be the user's UID.",
      "properties": {
        "id": { "type": "string", "description": "User UID, same as document ID." },
        "nombre_t": { "type": "string" },
        "rut_t": { "type": "string" },
        "email_t": { "type": "string", "format": "email" },
        "cel_t": { "type": "string" },
        "rol_t": { "type": "string", "description": "Role for permissions (admin, supervisor, tecnico)", "enum": ["admin", "supervisor", "tecnico"] },
        "signatureUrl": { "type": "string", "description": "Saved signature of the technician" }
      },
      "required": ["id", "nombre_t", "rut_t", "email_t", "rol_t"]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/ordenes/{orderId}",
        "definition": {
          "entityName": "WorkOrder",
          "schema": { "$ref": "#/backend/entities/WorkOrder" },
          "description": "Stores pending work orders."
        }
      },
      {
        "path": "/historial/{orderId}",
        "definition": {
          "entityName": "WorkOrder",
          "schema": { "$ref": "#/backend/entities/WorkOrder" },
          "description": "Stores completed work orders."
        }
      },
      {
        "path": "/clients/{clientId}",
        "definition": {
          "entityName": "Client",
          "schema": { "$ref": "#/backend/entities/Client" },
          "description": "Stores client information."
        }
      },
      {
        "path": "/personnel/{personnelId}",
        "definition": {
          "entityName": "Personnel",
          "schema": { "$ref": "#/backend/entities/Personnel" },
          "description": "Stores company personnel profiles, used as the source of truth for roles."
        }
      }
    ]
  }
}
