
{
  "entities": {
    "Project": {
      "title": "Project",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "clientId": { "type": "string" },
        "clientName": { "type": "string" },
        "createdBy": { "type": "string" },
        "creatorEmail": { "type": "string" },
        "status": { "type": "string", "enum": ["Active", "Completed", "Cancelled"] },
        "startDate": { "type": "string", "format": "date-time" },
        "endDate": { "type": "string", "format": "date-time" },
        "summary": { "type": "string" },
        "teamIds": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["id", "name", "clientId", "status", "createdBy"]
    },
    "WorkOrder": {
      "title": "WorkOrder",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "folio": { "type": "number" },
        "projectId": { "type": "string", "description": "Optional reference to a project" },
        "isProjectSummary": { "type": "boolean", "default": false },
        "clientName": { "type": "string" },
        "clientId": { "type": "string" },
        "createdBy": { "type": "string" },
        "status": { "type": "string", "enum": ["Pending", "Active", "Pending Signature", "Completed"] },
        "address": { "type": "string" },
        "building": { "type": "string" },
        "floor": { "type": "string" },
        "signalType": { "type": "string" },
        "signalCount": { "type": "number" },
        "isCert": { "type": "boolean" },
        "isLabeled": { "type": "boolean" },
        "description": { "type": "string" },
        "techName": { "type": "string" },
        "techSignatureUrl": { "type": "string" },
        "clientSignatureUrl": { "type": "string" },
        "clientReceiverName": { "type": "string" },
        "clientReceiverRut": { "type": "string" },
        "clientReceiverEmail": { "type": "string" }
      },
      "required": ["id", "folio", "clientName", "createdBy", "status"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/projects/{projectId}",
        "definition": {
          "entityName": "Project",
          "schema": { "$ref": "#/backend/entities/Project" },
          "description": "Project groups for work orders."
        }
      },
      {
        "path": "/ordenes/{orderId}",
        "definition": {
          "entityName": "WorkOrder",
          "schema": { "$ref": "#/backend/entities/WorkOrder" },
          "description": "Active work orders."
        }
      },
      {
        "path": "/historial/{orderId}",
        "definition": {
          "entityName": "WorkOrder",
          "schema": { "$ref": "#/backend/entities/WorkOrder" },
          "description": "Completed work orders."
        }
      }
    ]
  }
}
