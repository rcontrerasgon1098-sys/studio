
{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the Teleconnect Workflow application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the User entity."
        },
        "email": {
          "type": "string",
          "description": "Email address of the user.",
          "format": "email"
        },
        "role": {
          "type": "string",
          "description": "Role of the user (e.g., technician, administrator)."
        },
        "activo": {
          "type": "boolean",
          "description": "Status of the user."
        }
      },
      "required": [
        "id",
        "email",
        "role",
        "activo"
      ]
    },
    "WorkOrder": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "WorkOrder",
      "type": "object",
      "description": "Represents a work order in the Teleconnect Workflow application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the WorkOrder entity."
        },
        "folio": {
          "type": "number",
          "description": "Autogenerated folio number for the work order."
        },
        "clientName": {
          "type": "string",
          "description": "Name of the client."
        },
        "clientContact": {
          "type": "string",
          "description": "Contact info of the client."
        },
        "technicianId": {
          "type": "string",
          "description": "Reference to User (technician)."
        },
        "technicianEmail": {
          "type": "string",
          "description": "Email of the technician."
        },
        "startDate": {
          "type": "string",
          "description": "Start timestamp.",
          "format": "date-time"
        },
        "status": {
          "type": "string",
          "description": "Status (Completed/Pending)."
        }
      },
      "required": [
        "id",
        "folio",
        "clientName",
        "technicianId",
        "status"
      ]
    },
    "Client": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Client",
      "type": "object",
      "description": "Represents a client in the system.",
      "properties": {
        "id": { "type": "string" },
        "razonSocial": { "type": "string" },
        "nombreCliente": { "type": "string" },
        "rutCliente": { "type": "string" },
        "direccionCliente": { "type": "string" },
        "comunaCliente": { "type": "string" },
        "telefonoCliente": { "type": "string" },
        "emailClientes": { "type": "string" },
        "estadoCliente": { "type": "string", "enum": ["Activo", "Inactivo"] }
      },
      "required": ["nombreCliente", "rutCliente", "estadoCliente"]
    },
    "Personnel": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Personnel",
      "type": "object",
      "description": "Represents company personnel.",
      "properties": {
        "id_t": { "type": "string", "description": "Auto-assigned ID" },
        "nombre_t": { "type": "string" },
        "rut_t": { "type": "string" },
        "email_t": { "type": "string", "format": "email" },
        "cel_t": { "type": "string" },
        "rol_t": { "type": "string", "enum": ["Administrador", "TÃ©cnico"] },
        "signatureUrl": { "type": "string", "description": "Saved signature of the technician" }
      },
      "required": ["nombre_t", "rut_t", "email_t", "rol_t"]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": { "$ref": "#/backend/entities/User" },
          "description": "Stores user profiles."
        }
      },
      {
        "path": "/ordenes/{orderId}",
        "definition": {
          "entityName": "WorkOrder",
          "schema": { "$ref": "#/backend/entities/WorkOrder" },
          "description": "Stores all work orders."
        }
      },
      {
        "path": "/clients/{clientId}",
        "definition": {
          "entityName": "Client",
          "schema": { "$ref": "#/backend/entities/Client" },
          "description": "Stores client information."
        }
      },
      {
        "path": "/personnel/{personnelId}",
        "definition": {
          "entityName": "Personnel",
          "schema": { "$ref": "#/backend/entities/Personnel" },
          "description": "Stores company technicians."
        }
      }
    ]
  }
}
