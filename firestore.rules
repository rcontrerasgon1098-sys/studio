
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNCIONES DE AYUDA ---

    function isLoggedIn() {
      return request.auth != null;
    }

    function getPersonnelDoc() {
      return get(/databases/$(database)/documents/personnel/$(request.auth.uid));
    }

    function isAdmin() {
      let role = getPersonnelDoc().data.rol_t;
      return isLoggedIn() && (role == "admin" || role == "Administrador");
    }

    function isSupervisor() {
      let role = getPersonnelDoc().data.rol_t;
      return isLoggedIn() && role == "Supervisor";
    }

    function isTechnician() {
      let role = getPersonnelDoc().data.rol_t;
      return isLoggedIn() && role == "Técnico";
    }

    function isOrderOwner(data) {
      return isLoggedIn() && (
        data.createdBy == request.auth.uid || 
        data.supervisorId == request.auth.uid
      );
    }

    // --- REGLAS POR COLECCIÓN ---

    // Órdenes de Trabajo (Activas)
    match /ordenes/{docId} {
      allow read: if isAdmin() || isOrderOwner(resource.data);
      
      allow create: if isAdmin() || isSupervisor();
      
      allow update: if isAdmin() || (isSupervisor() && isOrderOwner(resource.data));
      
      allow delete: if isAdmin();
    }

    // Historial (Completadas)
    match /historial/{docId} {
      allow read: if isAdmin() || isOrderOwner(resource.data);
      
      allow create: if isAdmin() || (isSupervisor() && isOrderOwner(request.resource.data));
      
      allow update: if isAdmin() || (isSupervisor() && isOrderOwner(resource.data));
      
      allow delete: if isAdmin();
    }

    // Clientes
    match /clients/{docId} {
      allow read, create, update: if isAdmin() || isSupervisor();
      
      allow delete: if isAdmin();
    }

    // Personal
    match /personnel/{userId} {
      allow read: if isAdmin() || isSupervisor();
      
      allow create, update, delete: if isAdmin();
    }
    
    // Denegar todo lo demás por defecto (incluye técnicos explícitamente)
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
