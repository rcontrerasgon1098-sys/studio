
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isLoggedIn() {
      return request.auth != null;
    }

    // Obtiene el documento de personal del usuario actual para verificar su rol
    function getPersonnelDoc() {
      return get(/databases/$(database)/documents/personnel/$(request.auth.uid));
    }

    function isAdmin() {
      return isLoggedIn() && getPersonnelDoc().data.rol_t == "admin";
    }

    match /historial/{docId} {
      allow read: if isAdmin()
        || (isLoggedIn() && resource.data.supervisorId == request.auth.uid);

      allow write: if isAdmin() || isLoggedIn();
    }

    match /ordenes/{docId} {
      // Permite lectura a Admins, al Supervisor dueño de la OT mediante supervisorId, o acceso público si está en espera de firma
      allow read: if isAdmin()
        || (isLoggedIn() && resource.data.supervisorId == request.auth.uid)
        || (resource.data.status == "Pending Signature");

      // Permite creación a cualquier usuario autenticado
      allow create: if isLoggedIn(); 

      // Permite actualización a Admins o al Supervisor dueño mediante supervisorId
      allow update: if isAdmin()
        || (isLoggedIn() && resource.data.supervisorId == request.auth.uid);

      allow delete: if isAdmin();
    }

    match /clients/{docId} {
      allow read, write: if isLoggedIn();
    }

    match /personnel/{userId} {
      allow read: if isLoggedIn();
      // Solo el Admin puede crear o modificar personal
      allow write: if isAdmin();
    }
  }
}
