
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Funciones de ayuda para seguridad
    function isLoggedIn() {
      return request.auth != null;
    }
    
    function getUserData() {
      let path = /databases/$(database)/documents/personnel/$(request.auth.uid);
      return exists(path) ? get(path).data : null;
    }
    
    function isAdmin() {
      if (request.auth.token.email == 'admin@icsa.com') {
        return true;
      }
      let userData = getUserData();
      return isLoggedIn() && (
        userData != null && (userData.get('rol_t', '') == 'admin' || userData.get('rol_t', '') == 'Administrador')
      );
    }

    // Reglas para Proyectos
    match /projects/{projectId} {
      allow read: if isLoggedIn() && (
        isAdmin() || 
        resource.data.createdBy == request.auth.uid || 
        (resource.data.teamIds != null && request.auth.uid in resource.data.teamIds)
      );
      allow create: if isLoggedIn();
      allow update: if isLoggedIn() && (
        isAdmin() || 
        resource.data.createdBy == request.auth.uid || 
        (resource.data.teamIds != null && request.auth.uid in resource.data.teamIds)
      );
      allow delete: if isAdmin();
    }

    // Reglas para Ã“rdenes Activas
    match /ordenes/{orderId} {
      allow read: if isLoggedIn() && (
        isAdmin() || 
        resource.data.createdBy == request.auth.uid || 
        (resource.data.teamIds != null && request.auth.uid in resource.data.teamIds) ||
        resource.data.status == 'Pending Signature'
      );
      allow create: if isLoggedIn();
      allow update, delete: if isLoggedIn() && (isAdmin() || resource.data.createdBy == request.auth.uid);
    }

    match /historial/{orderId} {
      allow read: if isLoggedIn() && (
        isAdmin() || 
        resource.data.createdBy == request.auth.uid || 
        (resource.data.teamIds != null && request.auth.uid in resource.data.teamIds)
      );
      allow write: if isLoggedIn() && (isAdmin() || resource.data.createdBy == request.auth.uid);
    }

    // Reglas para Personal y Clientes: Lectura global para usuarios, escritura Admin/Supervisor
    match /personnel/{uid} {
      allow read: if isLoggedIn();
      allow write: if isAdmin();
    }

    match /clients/{clientId} {
      allow read: if isLoggedIn();
      allow write: if isLoggedIn() && (
        isAdmin() || 
        getUserData().get('rol_t', '') in ['supervisor', 'Supervisor', 'admin', 'Administrador']
      );
    }
    
    // Fallback de seguridad
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
