
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isLoggedIn() {
      return request.auth != null;
    }

    function getPersonnelDoc() {
      return get(/databases/$(database)/documents/personnel/$(request.auth.uid));
    }

    function isAdmin() {
      return isLoggedIn() && getPersonnelDoc().data.rol_t == "admin";
    }

    function isSupervisor() {
      return isLoggedIn() && getPersonnelDoc().data.rol_t == "supervisor";
    }

    match /historial/{docId} {
      allow read: if isAdmin()
        || (isSupervisor() && (resource.data.createdBy == request.auth.uid || resource.data.supervisorId == request.auth.uid));

      allow write: if isAdmin() || isSupervisor();
    }

    match /ordenes/{docId} {
      // Allow read for Admin, the Supervisor who created it, or public if it's a signature request
      allow read: if isAdmin()
        || (isLoggedIn() && (resource.data.createdBy == request.auth.uid || resource.data.supervisorId == request.auth.uid))
        || (resource.data.status == "Pending Signature");

      allow create: if isLoggedIn(); // Rely on application logic and role checking in personnel collection

      allow update: if isAdmin()
        || (isLoggedIn() && (resource.data.createdBy == request.auth.uid || resource.data.supervisorId == request.auth.uid));

      allow delete: if isAdmin();
    }

    match /clients/{docId} {
      allow read, write: if isAdmin() || isSupervisor();
    }

    match /personnel/{userId} {
      // Allow user to read their own profile to verify role during initialization
      allow read: if isLoggedIn() && (request.auth.uid == userId || isAdmin() || isSupervisor());
      allow write: if isAdmin();
    }
  }
}
