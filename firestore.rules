rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Funciones de Ayuda ---
    function isLoggedIn() {
      return request.auth != null;
    }

    function getUserData() {
      // Se asume que el documento del usuario existe si está logueado
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      return isLoggedIn() && getUserData().role == "admin";
    }

    function isSupervisor() {
      return isLoggedIn() && getUserData().role == "supervisor";
    }

    // ===============================
    // USERS
    // ===============================
    match /users/{userId} {
      // Admin lee todo, otros solo su propio perfil.
      allow read: if isAdmin() || request.auth.uid == userId;
      // Solo Admin escribe.
      allow write: if isAdmin();
    }

    // ===============================
    // CLIENTS
    // ===============================
    match /clients/{clientId} {
      allow read: if isAdmin() || isSupervisor();
      allow write: if isAdmin() || isSupervisor();
    }

    // ===============================
    // PERSONNEL
    // ===============================
    match /personnel/{personId} {
      // Admin y supervisores pueden leer la lista de personal.
      allow read: if isAdmin() || isSupervisor();
      // Solo Admin escribe.
      allow write: if isAdmin();
    }

    // ===============================
    // ORDENES (ACTIVAS)
    // ===============================
    match /ordenes/{ordenId} {
      // LIST: Supervisores pueden listar ordenes para luego filtrar en la app. Admin puede listar todo.
      allow list: if isAdmin() || isSupervisor();

      // GET: Admin lee cualquier orden. Supervisor solo lee las que creó.
      allow get: if isAdmin() || (isSupervisor() && resource.data.createdBy == request.auth.uid);

      // CREATE: Admin crea. Supervisor crea si es el autor.
      allow create: if isAdmin() || (isSupervisor() && request.resource.data.createdBy == request.auth.uid);

      // UPDATE: Admin actualiza. Supervisor actualiza las suyas si el estado es 'Pending'.
      allow update: if isAdmin() || (isSupervisor() && resource.data.createdBy == request.auth.uid && resource.data.status == "Pending");

      // DELETE: Solo Admin puede borrar.
      allow delete: if isAdmin();
    }

    // ===============================
    // HISTORIAL (OT CERRADAS)
    // ===============================
    match /historial/{historialId} {
      // LIST: Similar a ordenes, se permite listar para filtrar en la app.
      allow list: if isAdmin() || isSupervisor();

      // GET: Admin lee cualquier orden. Supervisor solo lee las suyas.
      allow get: if isAdmin() || (isSupervisor() && resource.data.createdBy == request.auth.uid);
      
      // Los registros del historial no se deben modificar ni borrar por supervisores.
      allow write: if isAdmin();
    }

    // ===============================
    // ROLES
    // ===============================
    match /roles/{roleId} {
      // Todos los usuarios logueados pueden leer los roles disponibles.
      allow read: if isLoggedIn();
      // Solo Admin puede modificar los roles.
      allow write: if isAdmin();
    }
  }
}
