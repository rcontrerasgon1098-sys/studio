
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isLoggedIn() {
      return request.auth != null;
    }

    function getPersonnelDoc() {
      return get(/databases/$(database)/documents/personnel/$(request.auth.uid));
    }

    function isAdmin() {
      return isLoggedIn() && (getPersonnelDoc().data.rol_t == "admin" || getPersonnelDoc().data.rol_t == "Administrador");
    }

    function isOrderOwner(resourceData) {
      return isLoggedIn() && (
        resourceData.createdBy == request.auth.uid || 
        (resourceData.teamIds != null && request.auth.uid in resourceData.teamIds)
      );
    }

    match /historial/{docId} {
      allow read: if isAdmin() || isOrderOwner(resource.data);
      // Solo admin puede borrar del historial definitivamente
      allow create, update: if isAdmin() || isLoggedIn();
      allow delete: if isAdmin();
    }

    match /ordenes/{docId} {
      allow read: if isAdmin()
        || isOrderOwner(resource.data)
        || (resource.data.status == "Pending Signature");

      allow create: if isLoggedIn(); 
      allow update: if isAdmin() || isOrderOwner(resource.data);
      // Solo admin puede borrar órdenes activas (los técnicos/supervisores solo editan)
      allow delete: if isAdmin();
    }

    match /clients/{docId} {
      allow read: if isLoggedIn();
      allow create, update: if isLoggedIn();
      allow delete: if isAdmin();
    }

    match /personnel/{userId} {
      allow read: if isLoggedIn();
      allow create, update: if isAdmin();
      allow delete: if isAdmin();
    }
  }
}
