
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isLoggedIn() {
      return request.auth != null;
    }

    // Obtiene el documento de personal del usuario actual para verificar su rol
    function getPersonnelDoc() {
      return get(/databases/$(database)/documents/personnel/$(request.auth.uid));
    }

    function isAdmin() {
      return isLoggedIn() && getPersonnelDoc().data.rol_t == "admin";
    }

    function isOwner(resourceData) {
      return isLoggedIn() && resourceData.createdBy == request.auth.uid;
    }

    match /historial/{docId} {
      // Un supervisor puede leer si es el dueño (createdBy)
      allow read: if isAdmin() || isOwner(resource.data);
      // Cualquier usuario autenticado puede escribir (para mover de ordenes a historial)
      allow write: if isAdmin() || isLoggedIn();
    }

    match /ordenes/{docId} {
      // Permite lectura a Admins, al dueño original (createdBy), o acceso público si está en espera de firma remota
      allow read: if isAdmin()
        || isOwner(resource.data)
        || (resource.data.status == "Pending Signature");

      // Permite creación a cualquier usuario autenticado (se valida en la app que mande createdBy correcto)
      allow create: if isLoggedIn(); 

      // Permite actualización a Admins o al dueño original
      allow update: if isAdmin() || isOwner(resource.data);

      allow delete: if isAdmin();
    }

    match /clients/{docId} {
      allow read, write: if isLoggedIn();
    }

    match /personnel/{userId} {
      allow read: if isLoggedIn();
      // Solo el Admin puede crear o modificar personal
      allow write: if isAdmin();
    }
  }
}
