
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isLoggedIn() {
      return request.auth != null;
    }

    // Obtiene el documento de personal del usuario actual para verificar su rol
    function getPersonnelDoc() {
      return get(/databases/$(database)/documents/personnel/$(request.auth.uid));
    }

    function isAdmin() {
      return isLoggedIn() && getPersonnelDoc().data.rol_t == "admin";
    }

    function isSupervisor() {
      return isLoggedIn() && getPersonnelDoc().data.rol_t == "supervisor";
    }

    match /historial/{docId} {
      allow read: if isAdmin()
        || (isLoggedIn() && (resource.data.supervisorId == request.auth.uid || resource.data.createdBy == request.auth.uid));

      allow write: if isAdmin() || isSupervisor();
    }

    match /ordenes/{docId} {
      // Permite lectura a Admins, al Supervisor dueño de la OT, o acceso público si está en espera de firma (con token)
      allow read: if isAdmin()
        || (isLoggedIn() && (resource.data.supervisorId == request.auth.uid || resource.data.createdBy == request.auth.uid))
        || (resource.data.status == "Pending Signature");

      // Permite creación a cualquier usuario autenticado (la app inyecta el supervisorId)
      allow create: if isLoggedIn(); 

      // Permite actualización a Admins o al Supervisor dueño
      allow update: if isAdmin()
        || (isLoggedIn() && (resource.data.supervisorId == request.auth.uid || resource.data.createdBy == request.auth.uid));

      allow delete: if isAdmin();
    }

    match /clients/{docId} {
      allow read, write: if isAdmin() || isSupervisor();
    }

    match /personnel/{userId} {
      // Un usuario siempre puede leer su propio perfil. Admins y Supervisores pueden ver el resto.
      allow read: if isLoggedIn() && (request.auth.uid == userId || isAdmin() || isSupervisor());
      // Solo el Admin puede crear o modificar personal
      allow write: if isAdmin();
    }
  }
}
