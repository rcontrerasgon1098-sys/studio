rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isLoggedIn() {
      return request.auth != null;
    }

    // Obtiene el documento de personal del usuario actual
    function getPersonnelDoc() {
      return get(/databases/$(database)/documents/personnel/$(request.auth.uid));
    }

    function isAdmin() {
      return isLoggedIn() && (getPersonnelDoc().data.rol_t == "admin" || getPersonnelDoc().data.rol_t == "Administrador");
    }

    // Valida si el usuario es el dueño de la orden mediante createdBy o supervisorId
    function isOrderOwner(resourceData) {
      return isLoggedIn() && (
        resourceData.createdBy == request.auth.uid || 
        resourceData.supervisorId == request.auth.uid
      );
    }

    match /historial/{docId} {
      // Admin ve todo, Supervisor ve lo suyo
      allow read: if isAdmin() || isOrderOwner(resource.data);
      // Escritura permitida si se está moviendo una orden válida
      allow write: if isAdmin() || isLoggedIn();
    }

    match /ordenes/{docId} {
      allow read: if isAdmin()
        || isOrderOwner(resource.data)
        || (resource.data.status == "Pending Signature");

      allow create: if isLoggedIn(); 

      allow update: if isAdmin() || isOrderOwner(resource.data);

      allow delete: if isAdmin();
    }

    match /clients/{docId} {
      allow read, write: if isLoggedIn();
    }

    match /personnel/{userId} {
      allow read: if isLoggedIn();
      allow write: if isAdmin();
    }
  }
}